<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.literature.chat.mapper.ChatBanMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.literature.chat.entity.ChatBan">
        <id column="id" property="id"/>
        <result column="session_id" property="sessionId"/>
        <result column="user_id" property="userId"/>
        <result column="status" property="status"/>
        <result column="reason" property="reason"/>
        <result column="created_by" property="createdBy"/>
        <result column="created_at" property="createdAt"/>
        <result column="lifted_at" property="liftedAt"/>
        <result column="lifted_by" property="liftedBy"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, session_id, user_id, status, reason, created_by, created_at, lifted_at, lifted_by
    </sql>

    <!-- 分页查询会话封禁记录 -->
    <select id="selectBySessionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_bans
        WHERE session_id = #{sessionId}
        ORDER BY created_at DESC
    </select>

    <!-- 分页查询会话中指定状态的封禁记录 -->
    <select id="selectBySessionIdAndStatus" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_bans
        WHERE session_id = #{sessionId}
          AND status = #{status}
        ORDER BY created_at DESC
    </select>

    <!-- 查询某会话中某用户的有效封禁记录 -->
    <select id="selectActiveBan" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_bans
        WHERE session_id = #{sessionId}
          AND user_id = #{userId}
          AND status = 'active'
        LIMIT 1
    </select>

    <!-- 检查用户在某会话中是否被封禁 -->
    <select id="isUserBanned" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM chat_bans
        WHERE session_id = #{sessionId}
          AND user_id = #{userId}
          AND status = 'active'
    </select>

    <!-- 查询某会话中所有有效的封禁记录 -->
    <select id="selectActiveBansBySessionId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM chat_bans
        WHERE session_id = #{sessionId}
          AND status = 'active'
        ORDER BY created_at DESC
    </select>

    <!-- 统计某会话的有效封禁数 -->
    <select id="countActiveBans" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM chat_bans
        WHERE session_id = #{sessionId}
          AND status = 'active'
    </select>

    <!-- 批量解除封禁 -->
    <update id="liftBans">
        UPDATE chat_bans
        SET status = 'lifted',
            lifted_at = NOW(),
            lifted_by = #{operatorId}
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND status = 'active'
    </update>

</mapper>
